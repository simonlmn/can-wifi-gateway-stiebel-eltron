{
    "tasks": [
        {
            "type": "shell",
            "label": "prepare-output",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build/${relativeFileDirname}"
            ]
        },
        {
            "type": "cppbuild",
            "label": "build-active-file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-DTEST_ENV",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/${relativeFileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": ["prepare-output"]
        }
    ],
    "version": "2.0.0"
}