{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${relativeFileDirname}/${fileBasenameNoExtension}",
                "-I",
                "${workspaceFolder}/src/iot-core/src",
                "-I",
                "${workspaceFolder}/src/pins/src",
                "-I",
                "${workspaceFolder}/src/serial-protocol/src",
                "-I",
                "${workspaceFolder}/src"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/${relativeFileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}